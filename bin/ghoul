#!/usr/bin/env node

var program = require('commander')
  , Ghoul = require('../ghoul');

program
  .option('-t, --test-directory <directory>', 'Directory containing tests')
  .parse(process.argv);

var opts = {};
if (program.testDirectory) {
  opts.testDirectory = program.testDirectory;
}

var ghoul = new Ghoul(opts);
ghoul.run();

